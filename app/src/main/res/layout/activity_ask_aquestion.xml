<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AskAQuestionActivity"
    android:orientation="vertical">

    <!--
    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/question_toolbar"
        android:background="@color/black"
        android:elevation="4dp"/>
        -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Click Icon to Add Photo"
        android:gravity="center"
        android:textSize="20sp"
        android:textColor="#881d16"
        android:textStyle="bold"
        android:layout_margin="10dp"
        />
    <ImageView
        android:id="@+id/questionImage"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/ic_image"
        android:layout_margin="10dp"
        android:layout_gravity="center"
        android:background="@drawable/backgroundeditview"
        />
    <Spinner
        android:id="@+id/spinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"

        android:entries="@array/topics"
        android:background="@drawable/backgroundeditview"
        />
    <EditText
        android:id="@+id/question_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Write your post here....."
        android:textSize="18sp"
        android:layout_marginTop="-2dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:textColor="@color/black"
        android:background="@drawable/backgroundeditview"
        android:padding="40sp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        >
        <Button
            android:id="@+id/Post_Question"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Submit Post"
            android:backgroundTint="#75004E"
            android:textSize="20sp"
            android:layout_margin="10dp"
            android:textColor="@color/white"
            android:textAllCaps="false"/>
        <Button
            android:id="@+id/cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Cancel"
            android:backgroundTint="@color/red"
            android:textSize="20sp"
            android:textColor="@color/white"
            android:textAllCaps="false"/>
    </LinearLayout>
</LinearLayout>